<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="246dp"
            android:layout_height="29dp"
            android:text="Inicia Sesión"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:textStyle="bold" android:textSize="24sp" android:layout_marginEnd="80dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="80dp"
            app:fontFamily="sans-serif" android:textAllCaps="true" android:textColor="#000000"
            android:gravity="center|center_horizontal" android:id="@+id/textView3"
            android:foregroundGravity="center_vertical|center"/>
    <ImageView
            android:layout_width="350dp"
            android:layout_height="192dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.055"
            android:foregroundGravity="center_vertical|center"/>
    <EditText
            android:layout_width="331dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:text="Nombre Usuario"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintStart_toStartOf="@+id/textView3" app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.529" android:foregroundGravity="center_vertical|center"/>
    <EditText
            android:layout_width="324dp"
            android:layout_height="46dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText2"
            app:layout_constraintStart_toStartOf="@+id/editText"
            app:layout_constraintEnd_toEndOf="@+id/editText" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" app:layout_constraintHorizontal_bias="0.0"
            android:foregroundGravity="center_vertical|center"/>
    <Button
            android:text="Iniciar Sesión"
            android:layout_width="184dp"
            android:layout_height="46dp"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="@+id/editText2"
            app:layout_constraintEnd_toEndOf="@+id/editText2" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2"
            android:background="#318A8A" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold"
            android:textAllCaps="true" android:foregroundGravity="center_vertical|center"/>
    <Button
            android:text="Invitado"
            android:layout_width="193dp"
            android:layout_height="59dp"
            android:id="@+id/btn_invitado" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#318A8A" android:textColor="#FFFFFF"
            android:textStyle="bold" android:textAllCaps="true"/>
    <Button
            android:text="ADMINISTRADOR"
            android:layout_width="193dp"
            android:layout_height="59dp"
            android:id="@+id/button3" android:background="#318A8A"
            android:textColor="#FFFFFF" android:textStyle="bold" android:textAllCaps="true"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_invitado" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>

</android.support.constraint.ConstraintLayout>